<odoo>
  <record id="view_next_workorder_wizard_form" model="ir.ui.view">
    <field name="name">next.workorder.wizard.form</field>
    <field name="model">next.workorder.wizard</field>
    <field name="arch" type="xml">
      <form string="Siguiente orden">
        <group>
          <field name="employee_id" required="1"/>
          <field name="workcenter_id" required="1"/>
          <field name="next_item_id" readonly="1"/>
        </group>
        <footer>
          <button string="Tomar siguiente" type="object" name="action_take_next" class="btn-primary"/>
          <button string="Cerrar" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_next_workorder_wizard" model="ir.actions.act_window">
    <field name="name">Siguiente orden</field>
    <field name="res_model">next.workorder.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>
</odoo>
