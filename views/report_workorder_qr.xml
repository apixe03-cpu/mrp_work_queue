<odoo>
  <!-- Reemplaza el código de barras existente por un QR -->
  <template id="report_mrp_workorder_qr_inherit" inherit_id="mrp.report_mrp_workorder">
    <!-- Localizamos el <span> que muestra el código de barras del MO -->
    <xpath expr="//span[@t-field='o.production_id.name']" position="replace">
      <!-- Mostramos un QR por operación; si querés usar el nombre de la operación: o.name -->
      <span
        t-esc="o.name"
        t-options="{'widget': 'barcode', 'type': 'QR', 'width': 90, 'height': 90, 'img_style': 'width:90px;height:90px'}"/>
    </xpath>
  </template>
</odoo>
