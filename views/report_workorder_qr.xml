<odoo>
  <!-- AÃ±adir QR al reporte de Orden de Trabajo -->
  <template id="report_mrp_workorder_qr_inherit" inherit_id="mrp.report_mrp_workorder">
    <!-- En el header, a la derecha -->
    <xpath expr="//div[contains(@class,'row')][1]" position="inside">
      <div style="float:right; text-align:right;">
        <!-- QR con el nombre de la OT (ej. WH/MO/00044-01) -->
        <span t-field="o.name"
              t-options="{
                'widget': 'barcode',
                'barcode_type': 'QR',
                'width': 120,
                'height': 120,
                'humanreadable': False
              }"/>
      </div>
    </xpath>
  </template>
</odoo>
