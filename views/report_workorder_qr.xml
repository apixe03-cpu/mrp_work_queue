<odoo>
  <!-- Paperformat 80 mm para térmica -->
  <record id="paperformat_workorder_80mm" model="report.paperformat">
    <field name="name">WO 80mm</field>
    <field name="format">custom</field>
    <field name="page_width">80</field>     <!-- mm -->
    <field name="page_height">200</field>   <!-- mm: ajustá si querés más/menos alto -->
    <field name="orientation">Portrait</field>
    <field name="margin_top">5</field>
    <field name="margin_bottom">5</field>
    <field name="margin_left">5</field>
    <field name="margin_right">5</field>
    <field name="dpi">90</field>
  </record>

  <!-- Inyectar QR SIEMPRE: bloque absoluto arriba-derecha dentro de la página -->
  <template id="report_mrp_workorder_qr_inherit" inherit_id="mrp.report_mrp_workorder">
    <!-- Genero la URL al formulario de la OT -->
    <xpath expr="//div[contains(concat(' ', normalize-space(@class), ' '), ' page ')]" position="inside">
      <t t-set="base_url" t-value="request.env['ir.config_parameter'].sudo().get_param('web.base.url')"/>
      <t t-set="qr_url"
         t-value="base_url + '/web#id=%d&amp;model=mrp.workorder&amp;view_type=form' % (o.id,)"/>

      <!-- QR fijo en la esquina superior derecha -->
      <div style="position:absolute; right:5mm; top:5mm;">
        <span t-esc="qr_url"
              t-options="{'widget':'barcode','barcode_type':'QR','width':140,'height':140,'humanreadable': False}"/>
      </div>
    </xpath>
  </template>
</odoo>
