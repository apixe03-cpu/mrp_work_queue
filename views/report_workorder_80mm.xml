<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <!-- Formato térmico 80mm (ancho real ~72 mm útiles) -->
  <record id="paperformat_workorder_80mm" model="report.paperformat">
    <field name="name">WO 80mm</field>
    <field name="format">custom</field>
    <field name="page_width">72</field>     <!-- mm -->
    <field name="page_height">1000</field>  <!-- alto grande = ticket largo -->
    <field name="orientation">Portrait</field>
    <field name="margin_top">2</field>
    <field name="margin_bottom">2</field>
    <field name="margin_left">2</field>
    <field name="margin_right">2</field>
    <field name="dpi">90</field>
  </record>

  <!-- Template QWeb propio (no hereda el de mrp) -->
  <template id="report_workorder_80mm">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="o">
        <div class="page"
             style="width:72mm; padding:3mm 2mm; font-size:10pt; font-family:monospace;">

          <!-- Título -->
          <h2 style="text-align:center; font-size:14pt; line-height:1.1; margin:0 0 2mm 0;">
            <t t-esc="o.name"/>
          </h2>

          <!-- Centro/trabajo / operación (opcional) -->
          <div style="text-align:center; margin:0 0 3mm 0;">
            <t t-esc="(o.workcenter_id.name or '')"/>
          </div>

          <!-- Responsable -->
          <div style="margin:0 0 2mm 0;">
            <b>Responsable:</b>
            <t t-esc="(o.employee_id and o.employee_id.name) 
          or (o.production_id and o.production_id.user_id and o.production_id.user_id.name) 
          or '-'"/>
          </div>

          <!-- OF -->
          <div style="margin:0 0 2mm 0;">
            <b>Orden de fabricación:</b>
            <t t-esc="o.production_id.name"/>
          </div>

          <!-- Producto terminado -->
          <div style="margin:0 0 2mm 0;">
            <b>Producto terminado:</b><br/>
            <t t-esc="o.product_id.display_name"/>
          </div>

          <!-- Cantidad -->
          <div style="margin:0 0 3mm 0;">
            <b>Cantidad por producir:</b>
            <t t-esc="o.qty_production"/> <t t-esc="o.product_uom_id.name"/>
          </div>

          <!-- Componentes -->
          <t t-if="o.move_raw_ids">
            <div style="border-top:1px dashed #000; padding-top:3mm; margin-top:2mm;">
              <b>Componentes:</b>
              <ul style="margin:0; padding-left:3mm;">
                <t t-foreach="o.move_raw_ids" t-as="m">
                  <li>
                    <t t-esc="m.product_id.display_name"/> — 
                    <t t-esc="m.product_uom_qty"/> <t t-esc="m.product_uom.name"/>
                  </li>
                </t>
              </ul>
            </div>
          </t>

          <!-- Código de barras centrado al final -->
          <div style="text-align:center; margin-top:6mm;">
            <span t-field="o.name"
                  t-options="{
                    'widget': 'barcode',
                    'barcode_type': 'CODE128',
                    'width': 600, 'height': 120,
                    'img_style': 'width:64mm;height:16mm;'
                  }"/>
          </div>

        </div>
      </t>
    </t>
  </template>

  <!-- Acción de reporte NUEVA, con binding al modelo para que aparezca en Imprimir -->
  <record id="action_report_mrp_workorder_80mm" model="ir.actions.report">
    <field name="name">Orden de Trabajo (80mm)</field>
    <field name="model">mrp.workorder</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">mrp_work_queue.report_workorder_80mm</field>
    <field name="paperformat_id" ref="mrp_work_queue.paperformat_workorder_80mm"/>
    <!-- Hace que aparezca en el menú Imprimir -->
    <field name="binding_model_id" ref="mrp.model_mrp_workorder"/>
    <field name="binding_type">report</field>
    <field name="print_report_name">'OT_80mm_' + (object.name or '').replace('/','_')</field>
  </record>

</odoo>
