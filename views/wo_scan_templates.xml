<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="wo_scan_template" name="WO Scan Form">
    <t t-call="web.layout">
      <div class="container" style="max-width:480px;padding:24px;">
        <h3>Cerrar OT</h3>
        <p>
          <b><t t-esc="wo.name"/></b><br/>
          <small><t t-esc="wo.production_id.name or ''"/></small>
        </p>

        <form action="/wo/scan/submit" method="post">
          <input type="hidden" name="token" t-att-value="wo.qr_token"/>

          <div class="form-group" style="margin-bottom:12px;">
            <label>Cantidad buena</label>
            <input class="form-control" type="number" step="0.01" min="0" name="qty_done" value="0"/>
          </div>

          <div class="form-group" style="margin-bottom:12px;">
            <label>Cantidad con scrap</label>
            <input class="form-control" type="number" step="0.01" min="0" name="qty_scrap" value="0"/>
          </div>

          <button class="btn btn-primary" type="submit">Finalizar y imprimir siguiente</button>
        </form>
      </div>
    </t>
  </template>

  <template id="wo_scan_done" name="WO Scan Done">
    <t t-call="web.layout">
      <div class="container" style="max-width:480px;padding:24px;text-align:center;">
        <h3>¡Listo!</h3>
        <p>La orden <b><t t-esc="wo.name"/></b> fue finalizada.</p>
        <p>Se envió a imprimir la siguiente en la cola.</p>
      </div>
    </t>
  </template>

</odoo>
