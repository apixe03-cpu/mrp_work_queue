<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="wo_scan_form" name="WO â€“ Terminar desde QR">
    <t t-call="web.layout">
      <div class="container" style="max-width:720px;">
        <h2>Orden de trabajo: <t t-esc="wo.name"/></h2>
        <div style="margin-bottom:10px; color:#666;">
          Producto: <t t-esc="wo.product_id.display_name"/>
        </div>
        <form t-att-action="'/wo/%s/submit' % wo.id" method="post" style="font-size:18px;">
          <div style="display:flex; gap:16px; margin:12px 0;">
            <label style="min-width:220px;">Piezas OK</label>
            <input type="number" name="qty_good" step="0.01" min="0" value="0" style="flex:1; font-size:18px; padding:8px;"/>
          </div>
          <div style="display:flex; gap:16px; margin:12px 0;">
            <label style="min-width:220px;">Piezas rechazadas</label>
            <input type="number" name="qty_scrap" step="0.01" min="0" value="0" style="flex:1; font-size:18px; padding:8px;"/>
          </div>
          <div style="margin-top:18px;">
            <button type="submit" class="btn btn-primary" style="font-size:18px; padding:10px 16px;">
              Finalizar orden
            </button>
          </div>
        </form>
      </div>
    </t>
  </template>
</odoo>
