<odoo>
  <record id="view_work_queue_item_list" model="ir.ui.view">
    <field name="name">work.queue.item.list</field>
    <field name="model">work.queue.item</field>
    <field name="arch" type="xml">
      <list>
        <field name="employee_id"/>
        <field name="workcenter_id"/>
        <field name="sequence"/>
        <field name="workorder_id"/>
        <field name="state"/>
        <field name="production_id"/>
        <field name="product_id"/>
      </list>
    </field>
  </record>

  <record id="view_work_queue_item_form" model="ir.ui.view">
    <field name="name">work.queue.item.form</field>
    <field name="model">work.queue.item</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="employee_id"/>
            <field name="workcenter_id"/>
            <field name="sequence"/>
            <field name="workorder_id"/>
          </group>
          <group>
            <field name="state" readonly="1"/>
            <field name="production_id" readonly="1"/>
            <field name="product_id" readonly="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_work_queue_item" model="ir.actions.act_window">
    <field name="name">Items de cola</field>
    <field name="res_model">work.queue.item</field>
    <field name="view_mode">list,form</field> <!-- antes: tree,form -->
  </record>
</odoo>
